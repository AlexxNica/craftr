# craftr_module(compiler)

P = load_module('platform')

if P.name == 'Darwin':
  module.extends('compiler.clang')
elif P.name == 'Linux':
  module.extends('compiler.gcc')
elif P.name == 'Windows':
  module.extends('compiler.msvc')
elif P.name == 'Cygwin':
  module.extends('compiler.gcc')
else:
  error("compiler can't be deduced for '{0}'".format(P.name))
