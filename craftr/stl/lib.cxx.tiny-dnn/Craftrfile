# lib.cxx.tinydnn

__all__ = ['tiny_dnn']

tiny_dnn = Framework('tiny_dnn',
  include = [loader.directory]
)

if options.build_examples:
  load_module('lang.cxx.*')

  example_bin = cxx_binary(
    inputs = cpp_compile(
      sources = [path.join(loader.directory, 'examples', 'main.cpp')],
      frameworks = [tiny_dnn]
    ),
    output = 'example'
  )

  example = runtarget(example_bin, cwd = path.join(loader.directory, 'examples'))
